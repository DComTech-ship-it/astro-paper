---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@/utils/slugify";
import { getPath } from "@/utils/getPath";
import { calculateReadingTime } from "@/utils/readingTime";
import Datetime from "./Datetime.astro";

type Props = {
  variant?: "h2" | "h3";
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath } = Astro.props;

const { title, description, author } = data;

// Calculate reading time from the body content
const readingTime = calculateReadingTime(data.body || "");

---

<li class="my-6">
  <a
    href={getPath(id, filePath)}
    class:list={[
      "inline-block text-lg font-medium text-accent",
      "decoration-dashed underline-offset-4 hover:underline",
      "focus-visible:no-underline focus-visible:underline-offset-0",
    ]}
  >
    <Heading
      style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
    >
      {title}
    </Heading>
  </a>
  <div class="flex items-center gap-4 text-sm text-muted opacity-80 mb-2">
    {author && <span>By {author}</span>}
    <span>â€¢ {readingTime} min read</span>
  </div>
  <Datetime {...data} />
  <p>{description}</p>
</li>
