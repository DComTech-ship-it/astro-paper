---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class="relative pt-20 pb-16 overflow-hidden">
      <!-- Hero Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-accent/10 via-transparent to-accent/5 dark:from-accent/20 dark:via-transparent dark:to-accent/10"></div>
      <div class="absolute inset-0 opacity-5 dark:opacity-10">
        <div class="h-full w-full bg-repeat" style="background-image: url('data:image/svg+xml;base64,'); background-size: 60px 60px;"></div>
      </div>
      
      <!-- Hero Content -->
      <div class="relative z-10">
        <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-6xl lg:text-7xl bg-gradient-to-r from-foreground to-accent bg-clip-text text-transparent">
          Simply You Blog
        </h1>
        
        <div class="flex items-center gap-4 mt-6">
          <a
            target="_blank"
            href="/rss.xml"
            class="inline-flex items-center gap-2 px-4 py-2 bg-accent text-background rounded-lg hover:bg-accent/90 transition-colors"
            aria-label="rss feed"
            title="RSS Feed"
          >
            <IconRss
              width={20}
              height={20}
              class="stroke-background"
            />
            <span class="font-medium">Subscribe</span>
          </a>
        </div>

        <div class="max-w-3xl mx-auto mt-8 space-y-6 text-center">
          <p class="text-xl leading-relaxed text-foreground">
            Mia woezɔ
          </p>
          <p class="text-lg leading-relaxed text-muted-foreground">
            Simply·You·Blog is your go-to space for everything that sparks curiosity, creativity, and inspiration. From lifestyle and personal stories to tips, ideas, and everyday musings, we explore it all with a fresh perspective and a focus on what makes life uniquely yours.
          </p>
          <p class="text-base leading-relaxed text-muted-foreground font-medium">
            Read writing guides, monetization strategies, and creator tools to build your audience and generate income.
          </p>
        </div>
        
        {
          SOCIALS.length > 0 && (
            <div class="mt-12 flex flex-col items-center gap-6">
              <h3 class="text-lg font-semibold text-foreground">Connect With Our Community</h3>
              <Socials />
            </div>
          )
        }
      </div>
    </section>

    <!-- Feature Cards Section -->
    <section class="py-20 border-b border-border">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">What We Explore Together</h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Dive into topics that nurture your mind, body, and spirit on your journey to authentic living.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="p-8 rounded-xl border border-border bg-background hover:border-accent/50 transition-all duration-300 hover:shadow-lg text-center">
          <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 stroke-accent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-foreground">Personal Growth</h3>
          <p class="text-muted-foreground leading-relaxed">Tips for self-discovery and continuous evolution on your unique journey.</p>
        </div>
        
        <div class="p-8 rounded-xl border border-border bg-background hover:border-accent/50 transition-all duration-300 hover:shadow-lg text-center">
          <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 stroke-accent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-foreground">Everyday Joy</h3>
          <p class="text-muted-foreground leading-relaxed">Finding magic in the small moments and celebrating daily victories.</p>
        </div>
        
        <div class="p-8 rounded-xl border border-border bg-background hover:border-accent/50 transition-all duration-300 hover:shadow-lg text-center">
          <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 stroke-accent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-foreground">Creative Living</h3>
          <p class="text-muted-foreground leading-relaxed">Nurturing your creativity and personal expression in everyday life.</p>
        </div>
        
        <div class="p-8 rounded-xl border border-border bg-background hover:border-accent/50 transition-all duration-300 hover:shadow-lg text-center">
          <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 stroke-accent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-foreground">Mindful Wellness</h3>
          <p class="text-muted-foreground leading-relaxed">Balancing technology, health, and inner peace in modern life.</p>
        </div>
        
        <div class="p-8 rounded-xl border border-border bg-background hover:border-accent/50 transition-all duration-300 hover:shadow-lg text-center">
          <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 stroke-accent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-foreground">Connection & Community</h3>
          <p class="text-muted-foreground leading-relaxed">Building meaningful relationships and finding your tribe.</p>
        </div>
        
        <div class="p-8 rounded-xl border border-border bg-background hover:border-accent/50 transition-all duration-300 hover:shadow-lg text-center">
          <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 stroke-accent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3 text-foreground">Home & Spaces</h3>
          <p class="text-muted-foreground leading-relaxed">Creating environments that reflect your true self and values.</p>
        </div>
      </div>
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
