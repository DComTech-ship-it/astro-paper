---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import Newsletter from "@/components/Newsletter.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
import { _t } from "@/i18n/lang";
import getDescription from "@/utils/getDescription";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured === true);
const recentPosts = sortedPosts.filter(({ data }) => data.featured !== true);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class="relative pt-8 pb-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
          Mia woez…î
        </h1>
        <a
          target="_blank"
          href="/rss.xml"
          class="inline-block ml-4"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <IconRss
            width={20}
            height={20}
            class="scale-125 stroke-accent stroke-3"
          />
          <span class="sr-only">RSS Feed</span>
        </a>

        <p class="mt-8 text-2xl md:text-3xl font-bold leading-tight text-foreground">
          Where authentic stories meet practical inspiration for your creative journey
        </p>
        
        <p class="mt-6 text-lg leading-relaxed">
          Welcome to a space where creativity flourishes and authentic voices are celebrated. 
          Here we share stories that inspire and practical tips that empower your growth.
        </p>

        <p class="mt-6 text-lg leading-relaxed">
          Join Our Community and get weekly inspiration and exclusive content delivered to your inbox.
        </p>

        <div class="mt-8 flex flex-col sm:flex-row items-center gap-4">
          <input
            type="email"
            placeholder="Enter your email address"
            class="flex-1 max-w-md px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent"
          />
          <button class="px-6 py-3 bg-accent text-background rounded-lg hover:bg-accent/90 transition-colors font-medium">
            Subscribe Now
          </button>
        </div>

        <p class="mt-8 text-lg">
          Connect With Us:
        </p>
        <div class="mt-2 flex">
          <Socials />
        </div>
      </div>
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
